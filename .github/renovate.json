{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranches": ["main"],
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "reviewers": ["Exeloo"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "allowedCommands": ["^pnpm install.*$"],
  "postUpgradeTasks": {
    "commands": ["pnpm install --lockfile-only"],
    "executionMode": "branch",
    "fileFilters": ["pnpm-workspace.yaml", "pnpm-lock.yaml", "**/package.json"]
  }
}
